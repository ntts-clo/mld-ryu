#
# mininet> sh ./mn-init
#
ovs-ofctl del-flows s1
ovs-ofctl del-flows s2
ovs-ofctl del-flows s3
ovs-ofctl del-flows s4
ovs-vsctl set bridge s1 protocols=[OpenFlow10,OpenFlow13]
ovs-vsctl set bridge s2 protocols=[OpenFlow10,OpenFlow13]
ovs-vsctl set bridge s3 protocols=[OpenFlow10,OpenFlow13]
ovs-vsctl set bridge s4 protocols=[OpenFlow10,OpenFlow13]
ovs-ofctl add-flow s2 actions=normal
ovs-ofctl add-flow s3 actions=normal
sleep 1
echo --- s1 ---
ovs-ofctl dump-flows s1
echo --- s2 ---
ovs-ofctl dump-flows s2
echo --- s3 ---
ovs-ofctl dump-flows s3
echo --- s4 ---
ovs-ofctl dump-flows s4
